                <artifactId>tiles-maven-plugin</artifactId>
                <version>2.23</version>
                <extensions>true</extensions>
                <configuration>
                    <tiles>
                        <tile>io.ebean.tile:enhancement:12.11.3</tile>
                    </tiles>
                </configuration>
            </plugin>
        </plugins>
    </build>

